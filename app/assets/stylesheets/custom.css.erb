header.masthead {
  padding-top: 10rem;
  padding-bottom: calc(10rem - 4.5rem);
  background: linear-gradient(to bottom, rgba(92, 77, 66, 0.8) 0%, rgba(92, 77, 66, 0.8) 100%), url(<%= asset_path 'bg-masthead.jpg' %>);
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: scroll;
  background-size: cover;
}
header.masthead h1 {
  font-size: 2.25rem;
}
@media (min-width: 992px) {
  header.masthead {
    height: 100vh;
    min-height: 40rem;
    padding-top: 4.5rem;
    padding-bottom: 0;
  }
  header.masthead p {
    font-size: 1.15rem;
  }
  header.masthead h1 {
    font-size: 3rem;
  }
}
@media (min-width: 1200px) {
  header.masthead h1 {
    font-size: 3.5rem;
  }
}

body {
  background: linear-gradient(to bottom, rgba(256, 256, 256, 0.5) 0%, rgba(230, 230, 230, 0.5) 100%), url(<%= asset_path 'wave.jpg' %>);
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: scroll;
  background-size: cover;
}

#container {
  display: grid;
  grid-template-rows: repeat(70, 1fr);
  grid-template-columns: repeat(7, minmax(160px, 240px));
  grid-auto-columns: 100px;

  overflow-x: auto;  /* 横スクロールの指定 */
  white-space: nowrap;  /* 横スクロールの指定 */
  overflow-scrolling: touch;  /* スクロールを滑らかにする */
  -webkit-overflow-scrolling: touch;  /* スクロールを滑らかにする */
}

.slot {
  display: block;
  -ms-grid-column: 1;
  -ms-grid-column-span: 1;
  grid-column: 1 / 2;
  --start: calc(1 + var(--row-start));
  --end: calc(1 + var(--row-end));
  grid-row: var(--start)/var(--end);
  border: solid 1px;
}

.track {
  grid-column: calc(var(--track) + 1);
  grid-row: 1 / -1;
}

.keynote {
  grid-column: 2 / -1;
  --start: calc(1 + var(--row-start));
  --end: calc(1 + var(--row-end));
  grid-row: var(--start)/var(--end);
  z-index: -1;
  background-color: #ffffff;
  border-radius: 5px;
}


.talk {
  --start: calc(1 + var(--track));
  --end: calc(2 + var(--track));
  grid-column: var(--start)/var(--end);
  grid-row: calc(1 + var(--row-start))/calc(1 + var(--row-end));
}

.content {
  background-color: #ffffff;
  margin: 2px;
  height: 100%;
  border-radius: 5px;
  border: solid 1px;
}