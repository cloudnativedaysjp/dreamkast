<%= form_with(url: admin_conference_path, model: conference_form, local: true, method: :patch) do |form| %>

  <h3>Conference Status</h3>

  <div class="form-row form-group">
    <div class="col-12 col-md-6">
      <% @conference_form.conference.class.statuses.keys.each do |key| %>
        <%= form.radio_button :status, key %>
        <%= form.label :status, key %><br>
      <% end %>
    </div>
  </div>

  <h3>Speaker Entry Status</h3>

  <div class="form-row form-group">
    <div class="col-12 col-md-6">
      <% @conference_form.conference.class.speaker_entries.keys.each do |key| %>
        <%= form.radio_button :speaker_entry, key %>
        <%= form.label :speaker_entry, key %><br>
      <% end %>
    </div>
  </div>

  <h3>Attendee Entry Status</h3>

  <div class="form-row form-group">
    <div class="col-12 col-md-6">
      <% @conference_form.conference.class.attendee_entries.keys.each do |key| %>
        <%= form.radio_button :attendee_entry, key %>
        <%= form.label :attendee_entry, key %><br>
      <% end %>
    </div>
  </div>

  <h3>Timetable Visible Status</h3>

  <div class="form-row form-group">
    <div class="col-12 col-md-6">
      <% @conference_form.conference.class.show_timetables.keys.each do |key| %>
        <%= form.radio_button :show_timetable, key %>
        <%= form.label :show_timetable, key %><br>
      <% end %>
    </div>
  </div>

  <h3>Links</h3>
  <div class="link-fields">
    <%= form.fields_for :links do |f| %>
      <%= render 'admin/conferences/link_fields', :f => f %>
    <% end %>
  </div>

  <p><%= link_to_add_link_fields "Add Link", form, :links, class: 'add-link btn btn-primary' %></p>

  <h3>Conference Days</h3>

  <div class="conference-day-fields">
    <%= form.fields_for :conference_days do |f| %>
      <%= render 'admin/conferences/conference_day_fields', :f => f %>
    <% end %>
  </div>

  <div class="form-row form-group">
    <div class="col-12 col-md-6">
      <%= form.submit %>
    </div>
  </div>

<% end %>