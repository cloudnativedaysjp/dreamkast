<%= turbo_frame_tag stamp_rally_def do %>
  <%= form_with(model: [:admin, stamp_rally_def.becomes(StampRallyDef)],
                url: @stamp_rally_def.new_record? ? admin_stamp_rally_defs_path(event: params[:event]) : admin_stamp_rally_def_path(@stamp_rally_def, event: params[:event]),
                data: { action: "turbo:submit-end->modal#close" }) do |form| %>
    <div class="row py-2 border-top">
      <div class="col-4">
        <%= form.label :type %>
        <%= form.select :type, options_for_select(type_options, selected: stamp_rally_def.type) %>
      </div>
      <div class="col-4">
        <%= form.label :sponsor_id %>
        <%= form.collection_select :sponsor_id, sponsors, :id, :name, prompt: "Select a sponsor" %>
      </div>

      <div class="col-4">
        <div class="d-flex justify-content-end">
          <%= form.submit class: "btn btn-primary btn-sm me-2" %>
          <%#= link_to "キャンセル", admin_stamp_rally_defs_path, class: "btn btn-sm btn-outline-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
