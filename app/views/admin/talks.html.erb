<div class="container">
    <%= render 'navigator' %>
    <% flash.each do |message_type, message| %>
        <div class="alert alert-info" role="alert">
        <%= message %>
        </div>
    <% end %>
    <div class="row">
        <h2>Bulk insert TALKS from CSV</h2>
        <div class="col-12 form-group">
        
        <%= form_with(url: '/admin/bulk_insert_talks', multipart: true) do |form| %>
            <%= form.file_field :file %>
            <%= form.submit "インポート" %>
            ※ Bulk insertを行うと既存のレコードは全て削除されます。
        <% end %>
        </div>
    </div>
    <div class="row">
        <h2>Bulk insert TALKS-SPEAKER from CSV</h2>
        <div class="col-12 form-group">
        
        <%= form_with(url: '/admin/bulk_insert_talks_speaker', multipart: true) do |form| %>
            <%= form.file_field :file %>
            <%= form.submit "インポート" %>
            ※ Bulk insertを行うと既存のレコードは全て削除されます。
        <% end %>
        </div>
    </div>
    <div class="row">
        <h2>Talks</h2>
        <table class="table table-striped talks_table" >
            <thead>
                <tr>
                    <th scope="col">Speakers</th>
                    <th scope="col">Title / Abstract</th>
                    <th scope="col">Track</th>
                    <th scope="col">DateTime</th>
                    <th scope="col">Vimeo ID</th>
                    <th scope="col">Sli.do ID</th>
                    <th scope="col">On Air</th>
                </tr>
            </thead>
            <tbody>
                <% @talks.each do |talk| %>
                <tr>
                    <td><ul class="p-0"><% talk.speakers.each do |speaker| %><li class="speaker"><%= speaker.name %></li><% end %></ul></td>
                    <td>
                        <h5><%= talk.title %></h5>
                        <p class="abstract"><%= talk.abstract[0..30] %></p>
                    </td>
                    <td><%= talk.track.name %></td>
                    <td>
                        <%= talk.date %>
                        <%= talk.start_time.strftime("%H:%M") + "-" + talk.end_time.strftime("%H:%M") %>
                    </td>
                    <td>
                        <% video_id = talk.video ? talk.video.video_id : nil %>
                        <%= text_field_tag "aaaa", video_id, placeholder: "vimeo id", size: "9" %>
                    </td>
                    <td>
                        <% slido_id = talk.video ? talk.video.slido_id : nil %>
                        <%= text_field_tag "aaaa", slido_id, placeholder: "sli.do id", size: "8" %>
                    </td>
                    <td class="on_air_group"> 
                        <% if talk.video %>
                            <%= link_to("",
                                          "",
                                          {class: "btn on_air_button #{talk.video.on_air ? "active": ""}"}) %>
                        <% end %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
<div id="transit_nav" class="p-4">
    <a href="" class="btn btn-danger transit_button">トランジット</a>
</div>