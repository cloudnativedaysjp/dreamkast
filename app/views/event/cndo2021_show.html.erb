<div id="<%= @conference.abbr %>" >
  <div class="background">
    <video src="https://cloudnativedaysjp-website.s3-ap-northeast-1.amazonaws.com/background.mp4" autoplay loop muted></video>
  </div>
  <div class="contents">
    <!-- Masthead-->
    <header>
        <div class="container">
            <div class="row">
                <%= image_tag("cndo2021/masthead.png", id: "masthead")   %>
            </div>
        </div>
    </header>
    <section class="page-section padding-top-0" id="about">
      <h1>aaaaaaaaaaaaaaaa</h1>
      <div class="container">
        <div class="row h-100 align-items-center justify-content-center text-center">
          <div class="col-lg-12 align-self-end">
              <h1 class="text-uppercase text-white font-weight-bold"><%= @conference.name %></h1>
              <hr class="divider my-4" />
          </div>
          <div class="col-lg-12 align-self-center">
                <p class="text-white-75 font-weight-bold"><%= days %> オンライン開催</p>
                <p class="text-white-75 font-weight-bold">参加費無料</p>
                <% if @conference.closed? || @conference.archived? %>
                  <p class="text-white-75 font-weight-light">イベントは終了しました。ご参加いただきありがとうございました</p>
                <% end %>
          </div>
          <div class="col-12 align-self-center">
            <% if @conference.closed? || @conference.archived?%>
              <%= render 'event/partial/buttons', conference: @conference %>
            <% else %>
              <%= render 'event/partial/speaker_entry_button', conference: @conference %>
              <%= render 'event/partial/attendee_entry_button', conference: @conference %>
            <% end %>
          </div>
        </div>
      </div>
    </section>

    <!-- About-->
    <section class="page-section bg-primary" id="about">
      <%= render 'event/partial/about', conference: @conference %>
    </section>

    <section class="page-section" id="sponsors">
      <%= render 'event/partial/sponsors', conference: @conference %>
    </section>

    <section class="page-section bg-secondary" id="information">
      <%= render 'event/partial/information', conference: @conference %>
    </section>
  </div>
</div>
