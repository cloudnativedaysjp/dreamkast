<div id="<%= @conference.abbr %>" >
  <div class="contents">
    <section class="page-section bg-primary" id="masthead">
      <div class="container">
        <div id="particles-js"></div>
        <div class="row h-100 align-items-center justify-content-center text-center">
          <div class="col-12 col-sm-8">
              <h2 class="font-weight-bold text-white">
                <span class="font-weight-light">小さな一歩、大きな飛躍</span><br />
                〜クラウドネイティブを継続する〜<br />
              </h2>
              <h1 class="font-weight-bold text-white"><%= @conference.name %></h1>
          </div>
          <div class="col-12 col-sm-4 align-self-end text-white">
              <p class="date">
                TBD
              </p>
              <p class="remaining">
                <% if @conference.remaining_date > 0 %>
                開催まであと<span class="remaining-date"><%= @conference.remaining_date %></span>日!
                <% elsif @conference.remaining_date > -1 && @conference.opened? %>
                ただいま開催中！
                <% end %>
              </p>
              <p class="font-weight-bold">
              ハイブリッド開催！
              </p>
              <p class="text-white">
              有明セントラルタワーホール&カンファレンス<br/>
              +オンライン<br/>
              参加費無料
              </p>
              <p class="">
              #CNDW2025
              </p>
              <% if @conference.closed? || @conference.archived? %>
                <p class="text-white-75 font-weight-light">イベントは終了しました。ご参加いただきありがとうございました</p>
              <% end %>
          </div>
        </div>
      </div>
    </section>

    <section class="page-section" id="entry">
      <div class="container">
        <div class="row h-100 align-items-center justify-content-center text-center">
          <div class="col-12 align-self-center">
            <% if @conference.closed? || @conference.archived?%>
              <%= render 'event/partial/buttons', conference: @conference %>
            <% else %>
              <h2 class="text-black mt-0 mb-5">エントリー</h2>
              <p class="text-black-75">
                CloudNative Days Winter 2025へのご参加にはエントリーが必要です<br />
              </p>
              <%= render 'event/partial/buttons', conference: @conference %>
            <% end %>
          </div>
        </div>
      </div>
    </section>

    <section class="page-section" id="about">
      <div class="container">
        <div class="row align-items-start justify-content-center text-center">
          <div class="col-lg-12 text-center">
            <h2 class="text-black mt-0">About</h2>
            <hr class="divider my-4" />
            <p class="text-black text-left mb-4">
              <%= simple_format(@conference.about) %>
            </p>
          </div>
        </div>
      </div>
    </section>

    <% if !@conference.sponsors.empty? %>
      <section class="page-section bg-primary" id="sponsors">
        <div class="container">
          <%= render 'sponsors', conference: @conference %>
        </div>
      </section>
    <% end %>

    <!-- Access -->
    <section class="page-section" id="access">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8 text-center">
            <h2 class="text-white mt-0">Access</h2>
            <hr class="divider mx-auto my-4 center-block light" />
          </div>
          <div class="col-12 col-sm-6">
              <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12971.28918811224!2d139.7937274!3d35.6321071!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xeea9641b7480ced0!2z5pyJ5piO44K744Oz44OI44Op44Or44K_44Ov44O8IOODm-ODvOODqybjgqvjg7Pjg5XjgqHjg6zjg7Pjgrk!5e0!3m2!1sja!2sjp!4v1668349214585!5m2!1sja!2sjp" width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
          </div>
          <div class="col-12 col-sm-6 align-self-top">
              <p class="text-white">
                〒135-0063<br/>
                有明セントラルタワー ホール＆カンファレンス 3F<br/>
                東京都江東区有明3-7-18
              </p>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>