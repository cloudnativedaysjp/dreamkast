<div class="container h-100 home">
  <div class="row h-100 align-items-center justify-content-center text-center">
    <h2 class="col-12">Upcoming events</h2>
    <hr class="divider my-4" />
    <% @upcoming.each do |event| %>
      <div class="col-12 my-4">
        <%= link_to "/#{event.abbr}" do %>
          <%= image_tag("#{event.abbr}/header_logo.png", class: "logo") if asset_exists?("#{event.abbr}/header_logo.png") %>
          <p class="font-weight-bold"><%= event.name %></p>
        <% end %>
      </div>
    <% end %>
    
  </div>
  <div class="row h-100 align-items-center justify-content-center text-center mt-4">
    <h2 class="col-12">Archives</h2>
    <hr class="divider my-4" />
    <% @archived.each do |event| %>
      
      <div class="col-12 my-4">
        <%= link_to "/#{event.abbr}" do %>
          <%= image_tag("#{event.abbr}/header_logo.png", class: "logo") if asset_exists?("#{event.abbr}/header_logo.png") %>
          <p class="font-weight-bold"><%= event.name %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>