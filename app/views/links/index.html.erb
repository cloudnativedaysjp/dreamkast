<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-sm-8 py-3">

      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Links</h4>
          <% @links.each do |link| %>
            <div class="card-text">
              <p class="link"><%= link_to link.title, link.url %></p>
              <p class="link-description"><%= link.description %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
