<%= form_with(url: orders_path, model: @order, local: true, class: "needs-validation") do |form| %>
  <div class="form-row form-group">

    <div class="col-12 col-md-6">
      <% tickets.each do |ticket| %>
        <%= radio_button_tag "order[ticket_ids]", ticket.id, false, required: 'required', disabled: ticket.sold_out? %>
        <%= label :ticket_ids, ticket.title %> (<%= ticket.stock_status %>)<br />
      <% end %>
    </div>
  </div>

  <div class="form-row form-group justify-content-md-center py-20">
    <%= form.submit "参加方法を決定", class: "btn btn-primary form-control" %>
  </div>
<% end %>
