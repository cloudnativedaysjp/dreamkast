<%= form_with(url: profile_url, model: @profile, class: "needs-validation") do |form| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <h5 class="font-weight-bold">入力内容にエラーがあります:</h5>
      <ul>
        <% @profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-5">
    <h4 class="section-header border-bottom-0 mb-4" style="font-size: 1.2rem; border-bottom: 1px dotted #1A1A1A;">基本情報</h4>
    
    <div class="row mb-4">
      <div class="col-12 col-md-6">
        <%= form.label :last_name, "姓", class: "form-label form-required font-weight-bold" %>
        <%= form.text_field :last_name, required: true, class: "form-control rounded-0", placeholder: "雲" %>
      </div>

      <div class="col-12 col-md-6">
        <%= form.label :first_name, "名", class: "form-label form-required font-weight-bold" %>
        <%= form.text_field :first_name, required: true, class: "form-control rounded-0", placeholder: "太郎" %>
      </div>
    </div>

    <div class="row mb-4">
      <div class="col-12 col-md-6">
        <%= form.label :last_name_kana, "姓(カナ)", class: "form-label form-required font-weight-bold" %>
        <%= form.text_field :last_name_kana, required: true, class: "form-control rounded-0", placeholder: "クラウド" %>
      </div>

      <div class="col-12 col-md-6">
        <%= form.label :first_name_kana, "名(カナ)", class: "form-label form-required font-weight-bold" %>
        <%= form.text_field :first_name_kana, required: true, class: "form-control rounded-0", placeholder: "タロウ" %>
      </div>
    </div>
  </div>

  <div class="mb-5">
     <h4 class="section-header border-bottom-0 mb-4" style="font-size: 1.2rem; border-bottom: 1px dotted #1A1A1A;">所属情報</h4>

    <div class="mb-4">
      <%= form.label :address_level1, "勤務先名/学校名（前株・後株などはセレクトボックスから選択ください）", class: "form-label form-required font-weight-bold" %>
      <div class="row">
        <div class="col-12 col-md-3 mb-2 mb-md-0">
          <%= form.collection_select :company_name_prefix_id, ::FormModels::CompanyNamePrefix.all, :id, :name, {prompt: "法人格を選択"}, {class: "form-control rounded-0"} %>
        </div>

        <div class="col-12 col-md-6 mb-2 mb-md-0">
          <%= form.text_field :company_name, required: true, class: "form-control rounded-0", placeholder: "クラウドネイティブデイズ" %>
        </div>

        <div class="col-12 col-md-3">
          <%= form.collection_select :company_name_suffix_id, ::FormModels::CompanyNameSuffix.all, :id, :name, {prompt: "法人格を選択"}, {class: "form-control rounded-0"} %>
        </div>
      </div>
    </div>


    <div class="row mb-4">
      <div class="col-12">
        <%= form.label :company_email, "勤務先メールアドレス", class: "form-label form-required font-weight-bold" %>
        <%= form.email_field :company_email, required: true, class: "form-control rounded-0", placeholder: "mail@example.com" %>
      </div>
    </div>

    <div class="row mb-4">
      <div class="col-12 col-md-4">
        <%= form.label :company_postal_code, "勤務先住所: 郵便番号", class: "form-label form-required font-weight-bold" %>
        <%= form.text_field :company_postal_code, required: true, class: "form-control rounded-0", minlength: "7", maxlength: "8", pattern: "(\\d{7}|\\d{3}-\\d{4})", placeholder: "1000001", autocomplete: "postal-code" %>
      </div>
      <div class="col-12 col-md-4">
        <%= form.label :company_address_level1, "都道府県", class: "form-label form-required font-weight-bold" %>
        <%= form.collection_select :company_address_level1, CompanyAddressLevel1.all, :name, :name, {prompt: ""}, {required: true, class: "form-control rounded-0", autocomplete: "address-level1"} %>
      </div>
      <div class="col-12 col-md-4">
         <%= form.label :company_address_level2, "市区町村", class: "form-label form-required font-weight-bold" %>
         <%= form.text_field :company_address_level2, required: true, class: "form-control rounded-0", placeholder: "港区", autocomplete: "address-level2" %>
      </div>
    </div>
    
    <div class="row mb-4">
        <div class="col-12 col-md-6">
            <%= form.label :company_address_line1, "町名・番地", class: "form-label form-required font-weight-bold"  %>
            <%= form.text_field :company_address_line1, required: true, class: "form-control rounded-0", placeholder: "赤坂1−2−3", autocomplete: "address-line1" %>
        </div>
        <div class="col-12 col-md-6">
            <%= form.label :company_address_line2, "建物名など", class: "form-label font-weight-bold" %>
            <%= form.text_field :company_address_line2, required: false, class: "form-control rounded-0", autocomplete: "address-line2"%>
        </div>
    </div>

    <div class="row mb-4">
      <div class="col-12 col-md-6">
        <%= form.label :company_tel, "勤務先電話番号", class: "form-label form-required font-weight-bold" %>
        <%= form.text_field :company_tel, required: true, class: "form-control rounded-0", placeholder: "0300000000", pattern: "[\\d+-]*" %>
      </div>
      <div class="col-12 col-md-6">
        <%= form.label :company_fax, "勤務先FAX番号", class: "form-label font-weight-bold" %>
        <%= form.text_field :company_fax, required: false, class: "form-control rounded-0", placeholder: "0300000000", pattern: "[\\d+-]*" %>
      </div>
    </div>

    <div class="row mb-4">
      <div class="col-12">
        <%= form.label :department, "勤務先部署･所属 / 学部･学科･学年", class: "form-label form-required font-weight-bold" %>
        <%= form.text_field :department, required: true, class: "form-control rounded-0", placeholder: "クラウド開発部門" %>
      </div>
    </div>

    <div class="row mb-4">
      <div class="col-12">
        <%= form.label :position, "勤務先役職", class: "form-label form-required font-weight-bold" %>
        <%= form.text_field :position, required: true, class: "form-control rounded-0", placeholder: "一般 / 管理職 / CTO など" %>
      </div>
    </div>
  </div>
  
  <div class="mb-5">
    <h4 class="section-header border-bottom-0 mb-4" style="font-size: 1.2rem; border-bottom: 1px dotted #1A1A1A;">属性アンケート</h4>
    
    <div class="row mb-4">
      <div class="col-12 col-md-6">
        <%= form.label :number_of_employee_id, "従業員数", class: "form-label form-required font-weight-bold" %>
        <%= form.collection_select :number_of_employee_id, ::FormModels::NumberOfEmployee.all, :id, :name, {prompt: ""}, {required: true,class: "form-control rounded-0", autocomplete: "number-of-employee-id"} %>
      </div>
      <div class="col-12 col-md-6">
        <%= form.label :occupation_id, "職種", class: "form-label font-weight-bold" %>
        <%= form.collection_select :occupation_id, ::FormModels::Occupation.all, :id, :name, {prompt: "", disabled: ::FormModels::Occupation.all.map{|i| i.id if i.disabled}.compact}, {required: true, class: "form-control rounded-0", autocomplete: "occupation_id"} %>
      </div>
    </div>

    <div class="row mb-4">
      <div class="col-12 col-md-6">
         <%= form.label :industry_id, "業種", class: "form-label font-weight-bold" %>
         <%= form.grouped_collection_select(
           :industry_id,
           ::FormModels::Industry.all,
           :child,
           :name,
           :id, :name,
           {prompt: "選択してください"},
           {class: "form-control rounded-0", autocomplete: "industry_id"}) %>
      </div>
      <div class="col-12 col-md-6">
        <%= form.label :annual_sales_id, "年商規模", class: "form-label font-weight-bold" %>
        <%= form.collection_select :annual_sales_id, ::FormModels::AnnualSales.all, :id, :name, {prompt: ""}, {class: "form-control rounded-0", autocomplete: "annual-sales-id"} %>
      </div>
    </div>
  </div>

  <div class="row mb-5" id="participation" >
    <div class="col-12">
      <h4 class="section-header border-bottom-0 mb-4" style="font-size: 1.2rem; border-bottom: 1px dotted #1A1A1A;">参加方法</h4>
      <div class="px-3">
          <%# <%= form.radio_button :participation, :online, { class: "radio_button_participation", id: "participation_online", required: true } %>
          <%# <%= form.label :online, "リモート参加", { for: "participation_online" } %>
          <div class="custom-control custom-radio">
              <%= form.radio_button :participation, :offline, { class: "custom-control-input", id: "participation_offline" , disabled: @conference.reach_capacity?, required: true } %>
              <% if @conference.reach_capacity? %>
                <%= form.label :offline, "現地参加", { for: "participation_offline" , class: "custom-control-label reached_capacity"} %>
                <span class="warning" >現地参加は定員に達したためお申込みいただけません</span>
              <% else %>
                <%= form.label :offline, "現地参加", { for: "participation_offline", class: "custom-control-label font-weight-bold" } %>
              <% end %>
          </div>
      </div>
    </div>
  </div>

  <div class="row my-4">
    <div class="col-12">
      <%# <hr class="my-4"> %>
    </div>
  </div>

  <% FormItem.where(conference_id: @conference.id).each do |form_item| %>
    <div class="row my-4">
      <%= label_tag "form_item[#{form_item.attr}]", form_item.name, class: "form-label font-weight-bold" %>
      <% 
        # 既存の回答があれば取得
        form_value = @profile.form_values.find_by(form_item_id: form_item.id)
        value = form_value ? form_value.value : nil
      %>
      <%= text_field_tag "form_item[#{form_item.attr}]", value, required: false, class: "form-control rounded-0", placeholder: "" %>
    </div>
  <% end %>

  <% if action_name == "new" %>
  <div class="privacy_policy bg-white border p-4 mb-4" style="border-color: rgba(0,0,0,0.1) !important;">
    <div class="prose">
        <%= markdown @conference.privacy_policy %>
    </div>

    <div class="form-check form-background mt-3 pt-3 border-top">
      <%= form.check_box :agreement, {required: true, class: "form-check-input"}, true, false %>
      <label class="form-check-label  form-required font-weight-bold" for="agreement">個人情報の取り扱いについて同意する <span class="small font-weight-normal d-block text-muted">ご同意いただけない場合は本セミナーを受講いただくことは出来ません。</span></label>
    </div>
  </div>
  <% end %>

  <div class="form-row form-group justify-content-md-center py-5">
    <%= form.submit submit_button_label, class: "btn btn-primary form-control btn-lg shadow-sm" %>
  </div>
<% end %>
