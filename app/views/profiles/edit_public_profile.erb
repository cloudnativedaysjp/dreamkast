<div class="container">
    <div class="row justify-content-lg-center">
        <div class="col-12 col-lg-12 registration-form py-3 px-md-5">
            <% flash.each do |key, value| %>
                <p id="notice" class="alert alert-success" role="alert"><%= flash[:notice] %></p>
            <% end %>
            <h2>公開プロフィールを編集</h2>
            <%= render 'form_public_profile', profile: @profile, submit_button_label: "公開プロフィールを登録する" %>
        </div>
    </div>
</div>
