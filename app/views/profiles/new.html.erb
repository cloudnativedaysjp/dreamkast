<div class="japanese-modern-theme">
<div class="container">
  <div class="row justify-content-lg-center">
    <div class="col-12 col-lg-6 registration-form py-3 my-3 px-md-5">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= alert_type(message_type) %> alert-dismissible fade show" role="alert">
          <%= message %>
        </div>
      <% end %>
      <h2 class="text-center section-header w-100 text-center border-bottom-0 mb-5" style="border-bottom: none !important;"><%= @conference.name %><br/>参加登録フォーム</h2>
      <div class="block"></div>
      <% if logged_in? %>
        <%= render 'form', profile: @profile, submit_button_label: "個人情報保護方針に同意して参加登録" %>
      <% else %>
        <div class="col-12 align-self-baseline my-4 justify-content-center text-center">
          <%= button_to 'ログイン / サインアップ', '/auth/auth0', {method: :post, class: "btn btn-focus btn-xl inline mb-4" } %>
          <% if @conference.abbr == 'cnk' %>
            <%= label_tag 'entry', '参加登録するにはクラウドネイティブ会議へのサインアップが必要です' %>
          <% else %>
            <%= label_tag 'entry', '参加登録するにはCloudNative Daysへのサインアップが必要です' %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
