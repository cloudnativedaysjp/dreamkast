<div class="japanese-modern-theme">
<div class="container">
  <div class="row justify-content-lg-center">
    <div class="col-12 col-lg-8 speaker-dashboard-form cfp-form py-4 my-3 px-md-5">
      <% flash.each do |key, value| %>
        <p id="notice" class="alert alert-success" role="alert"><%= flash[:notice] %></p>
      <% end %>
      <h2 class="text-center cfp-dashboard-title mb-2">プロフィール更新</h2>
      <p class="text-center text-muted mb-5"><%= @conference.name %></p>

      <%= render 'form', submit_button_label: "プロフィールを更新する" %>
    </div>
  </div>
</div>
</div>
