<% provide(:title, 'スポンサー担当者招待') %>

<div class="container">
  <div class="row speaker-dashboard-form p-md-4" id="speaker-landing">

    <div class="col-12 my-4">
      <h2 class="text-center">スポンサー担当者として招待された方へ</h2>
      <p>本ページはスポンサー担当者としての招待メールを受け取った方向けのページです。</p>
    </div>

    <div class="col-12 align-self-baseline my-4 justify-content-center text-center">
      <% if logged_in? %>
        <%= button_to 'スポンサー担当者として登録する', new_sponsor_contact_invite_accept_path, {params: {token: @sponsor_contact_invite.token}, method: :get, class: "btn btn-secondary btn-xl inline" } %>
      <% else %>
        <%= button_to 'スポンサー担当者として登録する', '/auth/auth0', {method: :post, class: "btn btn-secondary btn-xl inline" } %>
      <% end %>
      <%= label_tag 'entry', 'エントリーにはCloudNative Daysへのサインアップが必要です' %>
    </div>
  </div>
</div>
