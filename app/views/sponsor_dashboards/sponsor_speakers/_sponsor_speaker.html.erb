<%= turbo_frame_tag speaker do %>
  <div class="row py-2 border-top">
    <div class="col-2 my-auto">
      <%= speaker.name %>
    </div>
    <div class="col-2 my-auto">
      <%= speaker.email %>
    </div>
    <div class="col-2 my-auto">
      <%= link_to "編集",
                  edit_sponsor_dashboards_sponsor_speaker_path(sponsor_id: @sponsor.id, id: speaker.id),
                  class: "btn btn-sm btn-outline-primary",
                  data: { turbo_frame: "modal" } %>
    </div>
  </div>
<% end %>