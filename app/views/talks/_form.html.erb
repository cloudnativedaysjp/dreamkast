<%= form_with(model: talk, local: true) do |form| %>
  <% if talk.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(talk.errors.count, "error") %> prohibited this talk from being saved:</h2>

      <ul>
        <% talk.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label :abstract %>
    <%= form.text_area :abstract, class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label :movie_url %>
    <%= form.text_field :movie_url, class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label :track %>
    <%= form.text_field :track, class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.time_select :start_time, class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <%= form.time_select :end_time, class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label :talk_difficulty_id %>
    <%= form.collection_select :talk_difficulty_id, TalkDifficulty.all, :id, :name, class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label :talk_category_id %>
    <%= form.collection_select :talk_category_id, TalkCategory.all, :id, :name, class: "form-control"  %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
