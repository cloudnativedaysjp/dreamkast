<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title"><%= @talk.title %></h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <p class="card-text"><%= @talk.abstract %></p>
      <p class="card-text">Speaker: <%= raw(@talk.speakers.map { |speaker| raw(link_to(speaker.name, speaker))}.join(', ')) %></p>
      <p class="card-text">Main Category: <%= @talk.talk_category.name %></p>
      <p class="card-text">Audience Experience Level: <%= @talk.talk_difficulty.name %></p>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>
