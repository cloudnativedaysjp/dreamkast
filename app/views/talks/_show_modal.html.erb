<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">

    <div class="modal-header">
      <h5 class="card-title"><%= @talk.title %></h5>

      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <div class="modal-body">
      <%= render 'talks/partial_show/col_talk_category_block', talk: @talk %>
      <p class="card-text"><%= simple_format(@talk.abstract) %></p>
    </div>
    <div class="modal-body">
      <% @talk.speakers.each do |speaker| %>
        <div class="row py-3">
          <div class="col-auto col-md-auto">
            <div class="avatar">
              <%= image_tag speaker.avatar_or_dummy_url, :size => '50x50' %>
            </div>
          </div>
          <div class="col">
            <h5 class="">
              <%= speaker.name %>
              <%= speaker.twitter_link %>
              <%= speaker.github_link %>
            </h5>
            <h6 class="card-subtitle text-muted mb-1">
              <%= speaker.company if speaker.company != "" %>
            </h6>
            <h6 class="card-subtitle text-muted mb-1">
              <%= speaker.job_title if speaker.job_title != "" %>
            </h6>
              
            <% if speaker.profile != "" %>
              <p class="card-text"><%= simple_format speaker.profile %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="modal-footer">

      <a href="<%= talk_path(id: @talk.id) %>" data-turbolinks="false"><button type="button" class="btn btn-info">Permalinkを表示</button></a>
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>
