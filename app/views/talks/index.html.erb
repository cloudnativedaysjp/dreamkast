<p id="notice"><%= notice %></p>

<h1>Talks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Abstract</th>
      <th>Movie url</th>
      <th>Track</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Difficulty</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @talks.each do |talk| %>
      <tr>
        <td><%= talk.title %></td>
        <td><%= talk.abstract %></td>
        <td><%= talk.movie_url %></td>
        <td><%= talk.track %></td>
        <td><%= talk.start_time %></td>
        <td><%= talk.end_time %></td>
        <td><%= talk.difficulty_id %></td>
        <td><%= talk.category_id %></td>
        <td><%= link_to 'Show', talk %></td>
        <td><%= link_to 'Edit', edit_talk_path(talk) %></td>
        <td><%= link_to 'Destroy', talk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Talk', new_talk_path %>
