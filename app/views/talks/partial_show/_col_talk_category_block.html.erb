<div class="col-auto col-md-auto">

  <div class="category_difficulty block">
    <% if talk.talk_difficulty.present? && talk.talk_difficulty_id != 4 && talk.talk_category_id != 18 %>
      <span class="difficulty difficulty_<%= talk.talk_difficulty_id %>">
        <%= talk.talk_difficulty.name %>
      </span>
    <% end %>
    &nbsp;
    <span class="difficulty category_<%= talk.talk_category_id %>">
      <%= talk.talk_category.name %>
    </span>
    &nbsp;
    <% if talk.video_published %>
      <span class="difficulty archivable">アーカイブ視聴可</span>
    <% else %>
      <span class="difficulty non_archivable">アーカイブ視聴不可</span>
    <% end %>
  </div>
</div>
