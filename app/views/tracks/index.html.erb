      <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
      <br />
      <iframe src="https://vimeo.com/live-chat/442363621/" height="400" frameborder="0"></iframe>
    </div-->
    <div class="col-12 col-md-4 ">
      <iframe src="https://app.sli.do/event/qto2ktew" height="100%" width="100%" style="min-height: 560px;"></iframe>
    </div>
  </div>
</div>

<div id="messages">
    <%= render partial: 'message', collection: @messages %>
</div>

